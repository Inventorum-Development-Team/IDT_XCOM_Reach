extended:
  tags:
    RuleItem: 
      PlasmaGrenade: int
      InvGrenade: int
      FloorGrenade: int
      STRIKE: int
    BattleUnit:
      Lock: int
    RuleArmor:
      DropShield: int
      Hologram: int
    BattleGame: 
      DontPrimePlasma: int
  scripts:
    hitUnit:
      - offset: 1
        code: |
          var int plasmagrenade;
          var int primed;
          var int lock;
          var int dropshield;
          var int hologram;

          var ptr RuleInventory grenade_slot;
          var ptre BattleItem grenade_item;
          damaging_item.getTag plasmagrenade Tag.PlasmaGrenade;
          if eq plasmagrenade 1;
            rules.getRuleInventory grenade_slot "STR_GRENADE_SLOTS";
            unit.getInventoryItem grenade_item grenade_slot;
            grenade_item.isFuseEnabled primed;
            unit.getTag lock Tag.Lock;
            if eq lock 1;
              return power part side;
            end;
            unit.getTag hologram Tag.Hologram;
            if eq hologram 1;
              return power part side;
            end;
            unit.getTag dropshield Tag.DropShield;
            if eq dropshield 1;
              return power part side;
            end;
            if neq primed 1;
              battle_game.setTag Tag.DontPrimePlasma 1;
              grenade_item.setFuseTimer 1;
            end;
          end;
          return power part side;
      - offset: 2
        code: |
          var int firstid;
          var int secondid;
          var int invgrenade;
          var ptr BattleUnit owner;

          damaging_item.getTag invgrenade Tag.InvGrenade;
          if eq invgrenade 1;
            damaging_item.getOwner owner;
            owner.getId firstid;
            unit.getId secondid;
            if eq firstid secondid;
             set power 999;
            end;

          end;

          return power part side;

    createItem:
      - offset: 1
        code: |
          var int floorgrenade;
          var int dontprimeplasma;

          item.getTag floorgrenade Tag.FloorGrenade;
          if eq floorgrenade 1;
            battle_game.getTag dontprimeplasma Tag.DontPrimePlasma;
            if eq dontprimeplasma 1;
              battle_game.setTag Tag.DontPrimePlasma 0;
              return;
            end;
            item.setFuseTimer 1;
          end;

          return;
    selectItemSprite:
       - offset: 2 # Air Strike Smoke sprite Script
         code: |
          var int x;
          var int y;
          item.getTag x Tag.STRIKE;
          item.isFuseEnabled y;
          if and eq x 1 eq y 1;
            add sprite_index 8;
          end;
          return sprite_index;
       - offset: 3
         code: |
          var int x;
          var int y;
          item.getTag x Tag.InvGrenade;
          item.isFuseEnabled y;
          if and eq x 1 eq y 1;
            if eq blit_part blit_item_big;
              add sprite_index 1;
            end;
          end;
          return sprite_index;
    recolorItemSprite: 
       - offset: 2 
         code: |
          var int x;
          var int y;
          item.getTag x Tag.FloorGrenade;
          item.isFuseEnabled y;
          if and eq x 1 neq y 1;
            set new_pixel 0;
          end;
          return new_pixel;