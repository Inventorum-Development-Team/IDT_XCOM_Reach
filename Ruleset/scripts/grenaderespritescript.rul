items:
  - type: STR_PLASMA_GRENADE # ignoreDuplicate
    tags:
      STRIKE: 1

extended:
  tags:
   RuleItem:
      STRIKE: int
   
   
  scripts:
     selectItemSprite: 
       - offset: 2 # Air Strike Smoke sprite Script
         code: |
          var int x;
          var int y;
          BattleItem.getTag item x Tag.STRIKE;
          BattleItem.isFuseEnabled item y;
          if and eq x 1 eq y 1;
            add sprite_index 8;
          end;
          return sprite_index;